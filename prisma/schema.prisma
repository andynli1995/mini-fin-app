// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id          String   @id @default(cuid())
  name        String
  type        String   // e.g., "Payoneer", "MEXC", "Bank", "Cash"
  balance     Decimal  @default(0) @db.Decimal(10, 2)
  currency    String   @default("USD")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  transactions Transaction[]
  subscriptions Subscription[]
  
  @@map("wallets")
}

model Category {
  id          String   @id @default(cuid())
  name        String
  type        String   // "expense", "income", "lend", "rent"
  color       String?  // For UI display
  icon        String?  // Icon identifier
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  transactions Transaction[]
  
  @@unique([name, type])
  @@map("categories")
}

model Transaction {
  id                  String       @id @default(cuid())
  type                String       // "expense", "income", "lend", "rent"
  amount              Decimal      @db.Decimal(10, 2)
  date                DateTime
  note                String?
  categoryId          String
  walletId            String
  cleared             Boolean      @default(false) // Whether the transaction is cleared/returned
  isReturn            Boolean      @default(false) // Whether this is a return transaction (e.g., getting back a loan)
  relatedTransactionId String?    // ID of the original transaction this return is linked to (for lend/rent returns)
  relatedTransaction  Transaction? @relation("TransactionReturns", fields: [relatedTransactionId], references: [id], onDelete: SetNull)
  returnTransactions  Transaction[] @relation("TransactionReturns")
  category            Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  wallet              Wallet       @relation(fields: [walletId], references: [id], onDelete: Cascade)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  
  @@index([type])
  @@index([date])
  @@index([categoryId])
  @@index([walletId])
  @@index([cleared])
  @@index([isReturn])
  @@index([relatedTransactionId])
  @@map("transactions")
}

model Subscription {
  id            String   @id @default(cuid())
  serviceName   String
  amount        Decimal  @db.Decimal(10, 2)
  period        String   // "monthly", "yearly", "weekly", "daily"
  startDate     DateTime
  nextDueDate   DateTime
  paymentMethod String?  // e.g., "Credit Card", "Payoneer", etc.
  walletId      String?
  wallet        Wallet?  @relation(fields: [walletId], references: [id], onDelete: SetNull)
  isActive      Boolean  @default(true)
  note          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([nextDueDate])
  @@index([isActive])
  @@map("subscriptions")
}

model AppSettings {
  id                   String   @id @default(cuid())
  pinHash              String?  // Hashed PIN code
  isLocked             Boolean  @default(false)
  hideBalancesByDefault Boolean @default(false) // Hide balances by default on dashboard
  lockTimeoutMinutes   Int      @default(5) // Minutes before auto-lock after unlock
  enableNotifications  Boolean  @default(true) // Enable browser push notifications
  reminderDays         Int      @default(7) // Days before subscription due date to send reminder
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  
  @@map("app_settings")
}

model Company {
  id          String      @id @default(cuid())
  name        String
  website     String?     // Company website URL
  logo        String?     // Logo URL or path
  industry    String?     // Industry sector
  size        String?     // Company size (e.g., "Startup", "50-200", "500+")
  location    String?     // Company location
  notes       String?     // Additional notes about the company
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  interviews  Interview[]
  assessments Assessment[]
  
  @@map("companies")
}

model Interview {
  id            String    @id @default(cuid())
  companyId     String
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  role          String    // Job role/title
  status        String    // "applied", "screening", "interview", "offer", "rejected", "withdrawn"
  scheduledAt   DateTime? // Interview scheduled date/time
  referenceLink String?   // Link to job posting or application
  notes         String?   // Interview notes
  interviewer   String?   // Interviewer name
  interviewType String?   // "phone", "video", "onsite", "technical", "behavioral"
  reminderDays  Int?      // Days before interview to send reminder
  reminderHours Int?      // Hours before interview to send reminder
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([companyId])
  @@index([status])
  @@index([scheduledAt])
  @@map("interviews")
}

model Assessment {
  id            String    @id @default(cuid())
  companyId     String
  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  title         String    // Assessment title/name
  description   String?   // Assessment description
  deadline      DateTime  // Assessment deadline
  status        String    // "pending", "in-progress", "completed", "submitted", "expired"
  referenceLink String?   // Link to assessment platform or instructions
  notes         String?   // Assessment notes
  submittedAt   DateTime? // When assessment was submitted
  reminderDays Int?      // Days before deadline to send reminder
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([companyId])
  @@index([status])
  @@index([deadline])
  @@map("assessments")
}
